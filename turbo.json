{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        ".env.example"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                ".next/**",
                "!.next/cache/**"
            ]
        },
        "test": {
            "dependsOn": [
                "^build"
            ],
            "inputs": [
                "src/**",
                "test/**",
                "*.test.ts",
                "*.spec.ts"
            ]
        },
        "lint": {
            "dependsOn": [
                "^build"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "clean": {
            "cache": false
        }
    }
}