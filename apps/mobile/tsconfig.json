{
    "compilerOptions": {
        "strict": true,
        "target": "ESNext",
        "module": "commonjs",
        "lib": [
            "ES2022"
        ],
        "jsx": "react-native",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "paths": {
            "@/*": [
                "./*"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}